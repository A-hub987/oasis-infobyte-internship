<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Converter</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=BBH+Sans+Bogle&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        body {
            font-family: poppins, sans-serif;
            background: linear-gradient(135deg, #3c5336, #3b5fb3);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            
        }

        .container {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(40, 187, 65, 0.4);
            width: 350px;
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        input,
        select,
        button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
        }

        input {
            background: rgba(231, 237, 238, 0.2);
            color: #fff;
        }

        select {
            background: rgba(255, 255, 255, 0.2);
            color: #b3afaf;
        }

        button {
            background-color: #07ecce;
            color: #fcfcfc;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background-color: #0ea5e9;
            color: #fff;
        }

        .result {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
            color: #38bdf8;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Temperature Converter</h1>
        <input type="number" id="inputTemp" placeholder="Enter temperature">

        <select id="fromUnit">
            <option value="C">Celsius (°C)</option>
            <option value="F">Fahrenheit (°F)</option>
            <option value="K">Kelvin (K)</option>
        </select>

        <select id="toUnit">
            <option value="F">Fahrenheit (°F)</option>
            <option value="C">Celsius (°C)</option>
            <option value="K">Kelvin (K)</option>
        </select>

        <button onclick="convertTemperature()">Convert</button>

        <div class="result" id="result"></div>
    </div>

    <script>
        function convertTemperature() {
            const inputTemp = parseFloat(document.getElementById("inputTemp").value);
            const fromUnit = document.getElementById("fromUnit").value;
            const toUnit = document.getElementById("toUnit").value;
            const resultElement = document.getElementById("result");

            if (isNaN(inputTemp)) {
                resultElement.textContent = "Please enter a valid number.";
                return;
            }

            let celsius;

            // Convert input to Celsius
            if (fromUnit === "C") {
                celsius = inputTemp;
            } else if (fromUnit === "F") {
                celsius = (inputTemp - 32) * 5 / 9;
            } else if (fromUnit === "K") {
                celsius = inputTemp - 273.15;
            }

            // Convert Celsius to target unit
            let converted;
            if (toUnit === "C") {
                converted = celsius;
            } else if (toUnit === "F") {
                converted = (celsius * 9 / 5) + 32;
            } else if (toUnit === "K") {
                converted = celsius + 273.15;
            }

            resultElement.textContent =
                `${inputTemp}°${fromUnit} = ${converted.toFixed(2)}°${toUnit}`;
        }
    </script>
</body>

</html>
